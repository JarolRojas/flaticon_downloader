{
  "name": "Flaticon Pack Downloader",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "downloads", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.flaticon.es/packs/*",
    "https://www.flaticon.com/packs/*",
    "https://cdn-icons-png.flaticon.com/*",
    "https://cdn-share-sprites.flaticon.com/*",
    "https://www.flaticon.es/ajax/*",
    "https://www.flaticon.com/ajax/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Flaticon Pack Downloader",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_width": 800,
    "default_height": 1200
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.flaticon.es/packs/*",
        "https://www.flaticon.com/packs/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}
